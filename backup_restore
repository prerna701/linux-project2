#!/bin/bash

# Backup and Restore Script

BACKUP_DIR="/path/to/backup"  # Change this to your backup directory

function backup() {
    read -p "Enter directory to backup: " dir
    tar -czf "$BACKUP_DIR/$(basename "$dir")_backup_$(date +%Y%m%d).tar.gz" "$dir"
    echo "Backup of $dir completed."
}

function restore() {
    read -p "Enter backup file to restore: " backup_file
    tar -xzf "$BACKUP_DIR/$backup_file" -C /
    echo "Restoration of $backup_file completed."
}

function main() {
    echo "Backup and Restore"
    echo "1. Backup Directory"
    echo "2. Restore Backup"
    echo "3. Exit"
    read -p "Choose an option: " option

    case $option in
        1) backup ;;
        2) restore ;;
        3) exit 0 ;;
        *) echo "Invalid option." ;;
    esac
}

main